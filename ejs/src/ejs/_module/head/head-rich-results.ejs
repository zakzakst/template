<script type="application/ld+json">
<% if ( PAGE_DATA.breadcrumbs.length === 1) { -%>
  {
    "@context": "http://schema.org",
    "@type": "WebSite",
    "url": "<%= SITE_DATA.url %>",
    "name": "<%= SITE_DATA.name %>",
    "author": {
      "@type": "<%= SITE_DATA.ldAuthorType %>",
      "url": "<%= SITE_DATA.url %>",
      "logo": "<%= SITE_DATA.ldAuthorLogo %>"
    }
  }
<% } else { -%>
  {
    "@context": "http://schema.org",
    "@type": "breadcrumbList",
    "itemListElement": [
    <% for (let i = 0; i < PAGE_DATA.breadcrumbs.length; i++) { -%>
      {
        "@type": "ListItem",
        "position": <%= i + 1 %>,
        "item": {
          "@id": "<%= SITE_DATA.url + PAGE_DATA.breadcrumbs[i].path %>",
          "name": "<%= PAGE_DATA.breadcrumbs[i].label %>"
        }
      }<% if (i !== PAGE_DATA.breadcrumbs.length - 1) { -%>,<% } -%>
    <% } %>
    ]
  }
<% } -%>
</script>
